{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "security:openssf-scorecard"
  ],
  "schedule": ["before 6am on monday"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "assignees": ["farhan-ahmed1"],
  "reviewers": ["farhan-ahmed1"],
  "packageRules": [
    {
      "groupName": "TypeScript ecosystem",
      "matchPackagePatterns": ["typescript", "@types/"],
      "schedule": ["before 6am on monday"]
    },
    {
      "groupName": "ESLint ecosystem", 
      "matchPackagePatterns": ["eslint", "@typescript-eslint/"],
      "schedule": ["before 6am on monday"]
    },
    {
      "groupName": "Testing ecosystem",
      "matchPackagePatterns": ["vitest", "@vitest/"],
      "schedule": ["before 6am on monday"]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "schedule": ["before 6am on monday"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"]
  },
  "osvVulnerabilityAlerts": true,
  "commitMessagePrefix": "chore(deps): ",
  "semanticCommits": "enabled",
  "platformAutomerge": false,
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2
}
