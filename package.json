{
  "name": "hancover-action",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:security": "vitest run test/security.test.ts",
    "audit": "npm audit --audit-level high",
    "audit:fix": "npm audit fix",
    "security:check": "./scripts/security-audit.sh",
    "security:licenses": "npm ls --depth=0 --json | jq '.dependencies | to_entries | map(select(.value.license)) | map({name: .key, license: .value.license})'",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "fast-xml-parser": "^5.2.5",
    "globby": "^14.0.2",
    "yaml": "^2.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "9.33.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
