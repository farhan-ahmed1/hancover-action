{
  "name": "hancover-action",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/core/index.ts -o dist --source-map --license licenses.txt",
    "build:watch": "ncc build src/core/index.ts -o dist --source-map --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "audit": "npm audit --audit-level high",
    "audit:fix": "npm audit fix",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "fast-xml-parser": "^5.3.1",
    "globby": "^15.0.0",
    "sanitize-filename": "1.6.3",
    "yaml": "^2.5.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
        "@typescript-eslint/eslint-plugin": "8.45.0",
        "@typescript-eslint/parser": "8.45.0",
        "@vercel/ncc": "0.38.4",
        "@vitest/coverage-v8": "4.0.8",
        "eslint": "9.36.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.8"
  }
}
