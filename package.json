{
  "name": "hancover-action",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/core/index.ts -o dist --source-map --license licenses.txt",
    "build:watch": "ncc build src/core/index.ts -o dist --source-map --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "audit": "npm audit --audit-level high",
    "audit:fix": "npm audit fix",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "fast-xml-parser": "^5.3.1",
    "globby": "^15.0.0",
    "sanitize-filename": "1.6.3",
    "yaml": "^2.5.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@vercel/ncc": "0.38.4",
    "@vitest/coverage-v8": "4.0.8",
    "eslint": "9.35.0",
    "typescript": "^5.5.4",
    "vitest": "^4.0.8"
  }
}
