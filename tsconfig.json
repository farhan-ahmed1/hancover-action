{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
  "outDir": "dist",
  "rootDir": ".",
    "strict": true,
    "declaration": false,
    "esModuleInterop": true,
  "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
